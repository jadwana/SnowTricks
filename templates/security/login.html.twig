{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                    <div class="mb-3 text-center">
                        Vous êtes connecté·e comme {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}"class=" btn">Me déconnecter</a>
                    </div>
                {% endif %}
                <h1 class="h3 my-5 text-center font-weight-normal">Connectez-vous</h1>
                <div class="row justify-content-center ">
                    <div class="col-11 col-md-6 col-lg-4 shadow my-3 pt-5 px-md-5 bg-form">
                        <label for="inputUsername">Pseudo</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" 
                            class="form-control my-3" autocomplete="username" required autofocus>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control my-3" 
                            autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                        <div class="form-group text-center mt-5">
                            <a href="{{path('forgotten_password')}}">Mot de passe oublié ?</a>
                        </div>
                        <div class="form-group my-5 text-center">
                            <button class="btn" type="submit">Me connecter</button>
                        </div>
                    </div>
                </div>
               <div class="text-center justify-content-center mt-5">
                Pas encore de compte ?
                <a href="{{path('app_register')}}" class=" btn">S'inscrire</a>
               </div>
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
            </form>
        </div>
    </div>
</section>

{% endblock %}

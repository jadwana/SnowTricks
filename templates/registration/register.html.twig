{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
                <h1 class="h3 my-5 text-center font-weight-normal">Inscription</h1>
                <div class="row justify-content-center ">
                    <div class="col-11 col-md-8 col-lg-6 shadow my-3 pt-5 px-md-5 bg-form">
                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.username) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{form_row(registrationForm.email)}}
                            {{form_row(registrationForm.avatar)}}
                            <div class="form-group my-5 text-center">
                                <button type="submit" class="btn my-3">M'inscrire</button>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
                <div class="text-center justify-content-center mt-5">
                    Déjà un compte ? <a href="{{path('app_login')}}" class="btn">Se connecter</a>
                </div>
                
                            
    </section>
   
{% endblock %}

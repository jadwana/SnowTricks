{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mon mot de passe{% endblock %}

{% block body %}
<section class="container my-3">
    <h1 class="h3 my-5 text-center font-weight-normal">Réinitialisation de mon mot de passe</h1>
    <div class="row justify-content-center mb-5">
        <div class="col-11 col-md-6 col-lg-4 shadow my-3 pt-5 px-3 px-md-5 bg-form">
            {{ form_start(passForm) }}
                {{ form_row(passForm.username) }}
                {{ form_row(passForm.password) }}
                <div class="form-group my-5 text-center">
                    <button type="submit" class="btn mt-3">Envoyer</button>
                </div>
            {{ form_end(passForm) }}
        </div>
    </div>
</section>
{% endblock %}